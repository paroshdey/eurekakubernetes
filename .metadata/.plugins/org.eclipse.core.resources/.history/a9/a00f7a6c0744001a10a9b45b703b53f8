apiVersion: v1
kind: Service
metadata: 
  name: client1service
spec: 
  ports: 
    - 
      nodePort: 30001
      port: 8080
      protocol: TCP
      targetPort: 8080
  selector: 
    app: client1
  type: LoadBalancer

 ---
apiVersion: extensions/v1beta1
kind: Deployment
metadata: 
  labels: 
    app: client1
  name: client1deployment
spec: 
  replicas: 3
  template: 
    metadata: 
      labels: 
        app: client1
    spec: 
      containers: 
        - 
          image: client1
          imagePullPolicy: IfNotPresent
          name: client1
          ports: 
            - 
              containerPort: 8080
  