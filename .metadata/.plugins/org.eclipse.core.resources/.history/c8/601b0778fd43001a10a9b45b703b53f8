---
 kind: Service
 apiVersion: v1
metadata:
  name: client1service
spec:
  selector:
    app: client1
  ports:
  - protocol: "TCP"
    port: 8080
    targetPort: 8080
    nodePort: 30001
  type: LoadBalancer


---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: client1deployment
  labels:
    app: client1
spec:
  replicas: 3
  template:
    metadata:
      labels:
        app: client1
    spec:
      containers:
      - name: client1
        image: client1
        ports:
        - containerPort: 8080
        imagePullPolicy: IfNotPresent #For local dev, use local docker repo

